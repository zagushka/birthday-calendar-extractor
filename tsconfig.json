{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "module": "ESNext",
    "target": "ES2019",
    "allowJs": false,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
